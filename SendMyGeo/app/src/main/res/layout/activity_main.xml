<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="125dp"
        android:layout_height="120dp"
        android:src="@drawable/logogeosend"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="25dp"
        android:text="SendMyGeo"
        android:textSize="40dp" />

    <ToggleButton
        android:id="@+id/startStopButton"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button"
        android:checked="true"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:shadowColor="#12232121"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
        android:textColor="@color/white"
        android:textColorLink="#00FFFFFF"
        android:textOff="Comenzar envío"
        android:textOn="Detener envío"
        android:textSize="19sp" />


    <ToggleButton
        android:id="@+id/selectVehicleButton"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button"
        android:checked="true"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:shadowColor="#12232121"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
        android:textColor="@color/white"
        android:textColorLink="#00FFFFFF"
        android:textOff="Usar vehiculo 1"
        android:textOn="Usar vehiculo 2"
        android:textSize="19sp" />
    <TextView
        android:id="@+id/latitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="#999999"
        android:text="Latitude: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/longitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Longitude: "
        android:textSize="18sp"
        android:textColor="#999999"
        />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Time: "
        android:textSize="20sp"
        android:textColor="#999999"
        />
    <TextView
        android:id="@+id/rpmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="RPM:"
        android:textSize="20sp"
        android:textColor="#999999"
        />
    <TextView
        android:id="@+id/speedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Speed:"
        android:textSize="20sp"
        android:textColor="#999999"
        />
    <TextView
        android:id="@+id/vehicleIDTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="ID:"
        android:textSize="20sp"
        android:textColor="#999999"
        />
</LinearLayout>